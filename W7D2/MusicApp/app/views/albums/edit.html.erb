<h1>Edit Album</h1>
<section>
    <form action="<%= album_url(@album) %>" method="post">
        <input type="hidden" name="_method" value="patch">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

        <label>Title: 
            <input type="text" name="album[title]" value="<%= @album.title %>">
        </label>

        <label>Year: 
            <input type="number" name="album[year]" value="<%= @album.year %>">
        </label>

        <label>Band: 
            <select name="album[band_id]">
                <option default <%= @album.band_id ? "" : "selected" %>>-- Choose a Band --</option>
                <% @bands.each do |band| %>
                    <option value="<%= band.id %>" <%= @album.band_id == band.id ? "selected" : "" %> ><%= band.name %></option>
                <% end %>
            </select>
        </label>

        <label>Recording Type:
            <input type="radio" name="band[live]" id="studio" value="false" <%= @album.live ? "" : "checked" %>>
            <label for="studio">Studio</label>
            <input type="radio" name="band[live]" id="studio" value="true" <%= @album.live ? "checked" : "" %>>
            <label for="live">Live</label>
        </label>

        <input type="submit" value="Save">
    
    </form>
</section>