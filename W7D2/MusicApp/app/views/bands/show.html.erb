<h1><%= @band.name %></h1>

<section>

    <ul>
        <% @band.albums.each do |album| %>
            <li><%= album.title %> - <a href="<%= album_url(album) %>">View</a></li>
        <% end %>
    </ul>

   <a href="<%= new_band_album_url(@band) %>">Add Album</a>
   <a href="<%= edit_band_url(@band) %>">Edit Band</a>

   <form action="<%= band_url(@band) %>" method="post">
        <input type="hidden" name="_method" value="delete">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <input type="submit" value="Delete Band">
   </form>
</section>